{
  "name": "@badstu/job",
  "private": true,
  "packageManager": "yarn@4.9.2",
  "dependencies": {
    "@badstu/data": "workspace:*",
    "@badstu/db": "workspace:*",
    "@hexagon/croner": "jsr:^9.1.0"
  },
  "scripts": {
    "dev": "yarn deno:run ./src/job.ts",
    "dev:scrape": "yarn deno:run ./src/scrape.ts",
    "dev:location": "yarn deno:run ./src/location.ts",
    "build": "deno compile --no-check --allow-net --allow-env --unstable-sloppy-imports --output=./dist/job ./src/job.ts",
    "deno:run": "deno run --watch --allow-net --allow-env --env-file=.env.local --unstable-sloppy-imports"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@types/deno": "^2.3.0"
  }
}
